// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "npm",
      "args": ["run", "debugbuild"],
      "group": "build",
      "presentation": {
        "panel": "dedicated",
        "reveal": "silent"
      },
      "problemMatcher": ["$tsc-watch"]
    },
    {
      "label": "cargo build",
      "type": "shell",
      "command": "cargo build",
      "group": "build",
      "presentation": {
        "panel": "dedicated",
        "reveal": "silent"
      },
      "problemMatcher": ["$rustc"]
    },
    {
      "label": "buildall",
      "dependsOn": ["build", "cargo build"],
      "group": "build",
      "presentation": {
        "panel": "dedicated",
        "reveal": "never"
      }
    }
  ]
}
